<%= form_tag event_registration_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <p> Vous devez payer votre place afin de vous inscrire : <%= @event.spectator_price.to_f %>â‚¬
      </p>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="<%= @event.name %>"
          data-amount="<%= @event.spectator_price.to_f * 100 %>"
          data-locale="auto">
          data-currency="eur"
  </script>
<% end %>