<section id="portfolio-information" class="padding-top" style="padding-top: 80px">
    <div class="container">
        <div class="row">
            <div class="col-sm-6" style="padding-left: 75px">
                <%= image_tag @event.picture, class:"img-responsive", alt: "" %>
            </div>
            <div class="col-sm-6">
                <div class="project-name overflow">
                    <h2 class="bold"><%= @event.name %></h2>
                    <ul class="nav navbar-nav navbar-default">
                        <li><a href="#"><i class="fa fa-clock-o"></i><%= @event.created_at %></a></li>
                    </ul>
                </div>
                <div class="project-info overflow">
                    <h3>DESCRIPTION DE L'EVENEMENT</h3>
                    <p><%= @event.description %></p>
                    <h5> date:</h5>
                    <p> <%= @event.start_date %></p>

                    <h5> endroit :</h5>
                    <p> <%= @event.locality_id %></p>
                    <h5> prix public:</h5>
                    <p> <%= @event.spectator_price %></p>
                    <h5> rules:</h5>
                    <p> <%= @event.rules %></p>
                    <h5> prize money:</h5>
                    <p> <%= @event.prize_money %></p>

                    <h2> cet évenement a été crée par :</h2>
                    <p> <%= @promoter.first_name %></p>
                </div>

                <div class="client overflow">
                    <h3>Price :  <span style="color: #C03035"> <%= @event.spectator_price %> <i class="fa fa-euro"></i></span></h3>
                    <ul class="nav navbar-nav navbar-default">
                        <li><a href="#" style="font-size: 16px;"> </a></li>
                    </ul>
                </div>
                <div class="live-preview">
                    <a href="#" class="btn btn-common" style="margin-top: 37px">  <i class="fa fa-shopping-cart"></i> Je participe ! </a>
                </div>
            </div>
        </div>
    </div>
</section>