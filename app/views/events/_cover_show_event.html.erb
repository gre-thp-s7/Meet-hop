
<section class="p-0">
  <div class="image image-overlay">
    <% if @event.picture.attached? == true %>
    <%= image_tag @event.picture, class:"card-img-top", alt: "image" %>
    <% else %>
    <%= image_tag("https://s3.eu-west-3.amazonaws.com/meet-hop-public/event1.jpg", class: "card-img-top") %>
    <% end %>
  </div>
  <div class="swiper-container"
  data-top-top="transform: translateY(0px);"
  data-top-bottom="transform: translateY(250px);">
  <div class="swiper-wrapper">
    <div class="swiper-slide vh-100">
      <div class="caption">
        <div class="container">
          <div class="row justify-content-between vh-100">
            <div class="col-lg-8 align-self-center text-white text-shadow" data-swiper-parallax="-100%">
              <span class="eyebrow text-white mb-1"><%= @event.promoter.first_name %> <%= @event.promoter.last_name %></span>
              <h1 class="display-2"><%= @event.name %></h1>
              <% if @subscribtion_possible %>
              <%= link_to 'S\'inscrire', new_event_registration_path(@event.id), class:"btn btn-white btn-rounded px-5"%>
              <% elsif @promotor %>
              <%= link_to 'Éditer', edit_event_path(@event.id), class:"btn btn-white btn-rounded px-5"%>
              <% end %>
            </div>
            <div class="col-lg-4 align-self-end">
              <div class="row gutter-1">
                <div class="col-6 shadow">
                  <div class="equal">
                    <div class="boxed">
                      <div class="equal-header">
                        <h4><%= l(@event.start_date, format: :short ) %></h4>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-6 shadow ">
                  <div class="equal">
                    <div class="bordered  bg-orange">
                      <div class="equal-header text-white">
                        <h4><%= @event.city_name %></h4>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-6 shadow">
                  <div class="equal">
                    <div class="bordered bg-orange">
                      <div class="equal-header text-white">
                        <h4><%= @event.dancer_price %> €</h4>
                      </div>
                      <div class="equal-footer text-white">
                        <span>Prix danseur</span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-6 shadow">
                  <div class="equal">
                    <div class="bordered bg-orange">
                      <div class="equal-header text-white">
                        <h4><%= @event.spectator_price %> €</h4>
                      </div>
                      <div class="equal-footer bg-orange text-white">
                        <span>Prix spectateur</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>
<!-- / cover -->
