<section id="services">
  <div class="container">
    <h1 class="wow scaleIn" data-wow-duration="500ms" data-wow-delay="300ms" style="padding-top: 30px; border-width: 2px; border-style: solid; border-color: #1C6EA4">Dernieres Events ajoutées</h1>
    <div class="row">

      <% @x = 1 %>
      <% 3.times do |x| %>
      <div class="col-sm-4 padding wow fadeIn" data-wow-duration="1000ms" data-wow-delay="300ms" style="padding-top: 30px; border-width: 2px; border-style: solid; border-color: #1C6EA4">

        <div class="single-service pl-3">
          <% if @events[-@x] != nil %>
          <h2><%= @events[-@x].name%></h2>
          <p> <%= l(@events[-@x].start_date, format: :long ) %> </p>
          <p><%= @events[-@x].duration %> minutes</p>
          <p>Prix public</p>
          <p><%= @events[-@x].spectator_price %> €</p>
          <p>Prix inscription</p>

          <p>Règles</p>
          <p><%= @events[-@x].rules %></p>
          <p>Prize money</p>
          <p><%= @events[-@x].prize_money %></p>

          <p>this is just to show that there's here !</p>
          <p><%= @events[-@x].locality.city_name %></p>
          <p><%= @events[-@x].promoter.first_name %> <%= @events[-@x].promoter.last_name %></p>

          <% else %>
          <P>== not enough events in db ==</P>
          <% end%>
        </div>
      </div>
      <% @x += 1 %>
      <% end %>

      </div>
    </div>
</section>
