<div>
	<div class="row">

		<div class="col-md-6 offset-md-3">
			<div class="h1 mb-3 font-weight-normal text-center">Création d'un nouvel événement</div>

			<%= form_for @event do |f| %>
			<div class="field mt-3">

				<label>Nom</label>
				<%= f.text_field :name, class: 'form-control' %>
			</div>
			<div class="field mt-3">
				<label>Description</label>
				<%= f.text_area :description, class: 'form-control' %>
			</div>
			<div class="field mt-3">
				<label>Date et heure</label><br/>
				<%=f.datetime_select :start_date, {ampm: true, minute_step: 15, :order => [:day, :month, :year, :hour, :minute], prompt: {day: 'Jour', month: 'Mois', year: 'Année'}, start_year: Date.current.year, end_year: Date.current.year + (2)}, class: 'form-control date-select'%>
			</div>
			<div class="field mt-3">
				<label>Durée</label><br/>
				<%= f.time_select :duration, {minute_step: 15, prompt: {hour: 'Heures', minute: 'Minutes'}},class: 'form-control date-select' %>
			</div>
			<div class="field mt-3">
				<label>Prix spectateurs</label>
				<%= f.number_field :spectator_price, class: 'form-control' %>
			</div>
				<div class="field mt-3">
				<label>Prix danseurs</label>
				<%= f.number_field :dancer_price, class: 'form-control' %>
			</div>
			<div class="field mt-3">
				<label>Règles</label>
				<%= f.text_area :rules, class: 'form-control'  %>
			</div>
			<div class="field mt-3 mb-3">
				<label>Prize money</label>
				<%= f.text_field :prize_money, class: 'form-control' %>
			</div>
			<div class="mt-2 mb-3">
				<% @all_categories.each do |cate| %>
				<div class="form-check">
				<input type="checkbox" class="form-check-input" name="category[]" value=<%= cate.id %> >  <%= cate.name %>
				</div>
				<% end %>
			</div>

			<label>image associée</label>

			<p>=== attention, choisi bien, ce sera la seule et c'est inchangeable ! (pour le moment ) ===</p>
			<%= f.file_field :picture %>

			<div class="actions">
				<%= f.submit "Créer", class: "btn btn-submit btn-lg btn-block" %>
			</div>

			<% end %>

		</div>
	</div>
</div>
