


  <section class="p-0 bg-light">
    <div class="image image-overlay image-cover" style="background-image:url(https://s3.eu-west-3.amazonaws.com/meet-hop-public/home.jpg)"
    data-top-top="transform: translateY(0px);"
    data-top-bottom="transform: translateY(-250px);"></div>
    <div class="container">

      <div class="row justify-content-center align-items-end vh-50 mb-5">
        <div class="col col-md-10 col-lg-8">
          <div class="row align-items-center">

            <div class="col-4 col-lg-3">
              <% if @user.avatar.attached? == true %>

              <%= image_tag @user.avatar, class:"mr-3 avatar avatar-xl rounded", alt: "avatar" %>

              <% else %>

              <%= image_tag("https://s3.eu-west-3.amazonaws.com/meet-hop-public/default-avatar.png", class: "mr-3 avatar avatar-xl rounded") %>
              <% end %>
            </div>
            <div class="col">
              <div class="row align-items-center">
                <div class="col-md-8">
                  <h2 class="mb-0"><b><%= @user.first_name %></b> <%= @user.last_name %></h2>
                </div>
              </div>
            </div>
          </div>
          <span class="author-card-position">
            Inscrit(e) depuis le <%= current_user.created_at.day %> - <%= current_user.created_at.month %> - <%= current_user.created_at.year %>
          </span>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-light pt-2">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6 col-lg-6">
          <div class="row">
            <div class="col">
              <h5 class="mb-2 fs-20 font-weight-normal">Infos</h5>
              <div>
                <div class="row">
                  <div class="col">
                    <i class="fas fa-at"></i>
                    <span class="pl-1">Email :</span>
                    <div class="form-control"><%= @user.email %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <i class="fas fa-phone"></i>
                    <span class="pl-1">Téléphone :</span>
                    <div class="form-control"><%= @user.phone %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-6">

            <p>
              <%= link_to edit_user_registration_path, class: "btn btn-style-4 btn-primary btn-sm" do%>
              <span><i class="fas fa-key"></i> Editer mot de passe </span>
              <% end %>

              <%= link_to edit_user_path(@user), class: "btn btn-style-4 btn-primary btn-sm" do%>

              <span><i class="fas fa-user-edit"></i> Editer les informations du profil </span>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
