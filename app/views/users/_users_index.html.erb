<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nom, surnom</th>
      <th scope="col">Téléphone</th>
      <th scope="col">Email</th>
    </tr>
  </thead>
  <tbody>
    <% @x = 1 %>
    <% @users.each do |user| %>
    <tr>
      <th scope="row"><%= @x %></th>
      <td> <%= user.first_name %>  <%= user.last_name %>
      <% unless user.nick_name == nil %>, <i>"<%= user.nick_name %>"</i> <%end%> </td>
      <td><%= user.phone %></td>
      <td><%= user.email %></td>
    </tr>
    <% @x += 1 %>
    <% end %>
  </tbody>
</table>
