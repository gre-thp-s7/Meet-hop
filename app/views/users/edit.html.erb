
<section class="p-0 bg-light">
  <div class="image image-overlay image-cover" style="background-image:url(https://s3.eu-west-3.amazonaws.com/meet-hop-public/home.jpg)"
  data-top-top="transform: translateY(0px);"
  data-top-bottom="transform: translateY(-250px);"></div>
  <div class="container">

    <div class="row justify-content-center align-items-end vh-50 mb-5">
      <div class="col col-md-10 col-lg-8">
        <div class="row align-items-center">

          <div class="col-4 col-lg-3">
            <% if @user.avatar.attached? == true %>

            <%= image_tag @user.avatar, class:"mr-3 avatar avatar-xl rounded", alt: "avatar" %>

            <% else %>

            <%= image_tag("https://s3.eu-west-3.amazonaws.com/meet-hop-public/default-avatar.png", class: "mr-3 avatar avatar-xl rounded") %>
            <% end %>
          </div>
          <div class="col">
            <div class="row align-items-center">
              <div class="col-md-8">
                <h2 class="mb-0"><b><%= @user.first_name %></b> <%= @user.last_name %></h2>
              </div>
            </div>
          </div>
        </div>
        <span class="author-card-position">
          Inscrit(e) depuis le <%= current_user.created_at.day %> - <%= current_user.created_at.month %> - <%= current_user.created_at.year %>
        </span>
      </div>
    </div>
  </div>
</section>

<section class="bg-light pt-2">

  <div class="row">
    <div class="col-md-6 offset-md-3">

      <%= form_for @user do |f| %>
      <h1 class="h3 mb-3 font-weight-normal text-center">Mes Informations</h1>
      <div class="form-group">
        <%= f.text_field :first_name, class: 'form-control', placeholder: 'Prénom'%><br/>
        <%= f.text_field :last_name, class: 'form-control', placeholder: 'Nom'%><br/>
        <%= f.text_field :phone, class: 'form-control', placeholder: 'Numéro de téléphone'%><br/>
      </div>
      <div>Avatar</div>
      <%= f.file_field :avatar %>
      <div class="form-actions mt-3">
        <button type="submit" class="btn-primary btn-lg"> Mettre à jour </button>
      </div>
      <% end %>

      <%= link_to "Retour", :back %>

    </div>
  </div>
</section>
