<h1>Registrations#new</h1>

<div class="content row justify-content-md-center">
	<div class="card col-lg-6">

		<div class="card-body">
		<h1>S'inscrire à l'événement "<%= @event.name %>"</h1>
		</div>

		<div class="form-group">
		<p> Description : <%= @event.description %></p>
		</div>

		<%= form_tag({:controller => "charges", :action => "new"}, {:method => "get"}) do %>
			<article>

				<% if @can_subs == true %>
					<div class="control">
						<label class="radio">
							<input type="radio" name="dancer" value="true" required>
							Danseur
							<input type="radio" name="dancer" value="false" required>
							Spectateur
						</label>
						<br>
					</div>

					<% @categories.each do |cate| %>
						<input type="checkbox" name="categories[]" value=<%= cate.id %> >  <%= cate.name %> <br/>
					<% end %>

					<div class="actions">
					<%= submit_tag "inscrit moi", class: "btn btn-submit btn-lg btn-block" %>
					<div class="card col-lg-6">

				<% else %>

					<h1> tu es soit déja inscrit ou soit le créateur, ce msg apparait car le callback before action ne fonctionne pas <- merci yaya !</h1>

				<% end %>

			</article>
		<% end %>

	</div>
</div>
